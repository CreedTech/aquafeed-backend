# Environment Variables
NODE_ENV=development
PORT=5000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/aquafeed
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/aquafeed

# Redis
REDIS_URL=redis://localhost:6379
# For Upstash: redis://:password@host:port

# Session Secret
SESSION_SECRET=your-super-secret-session-key-change-in-production

# Email Service (Gmail SMTP)
# Steps to get Gmail App Password:
# 1. Enable 2FA on your Gmail: https://myaccount.google.com/security
# 2. Generate App Password: https://myaccount.google.com/apppasswords
# 3. Use the generated 16-character password below
SMTP_USER=your-gmail@gmail.com
SMTP_PASS=your-16-char-app-password

# Paystack
PAYSTACK_PUBLIC_KEY=pk_test_xxxx
PAYSTACK_SECRET_KEY=sk_test_xxxx
PAYSTACK_WEBHOOK_SECRET=your-webhook-secret

# Cloud Storage (Cloudinary)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# App Config
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001
MOBILE_APP_URL=aquafeedpro://

# Feature Flags
ENABLE_OTP_AUTH=true
ENABLE_PAYMENTS=true
ENABLE_NOTIFICATIONS=true

# Clerk Authentication
CLERK_PUBLISHABLE_KEY=pk_test_xxxx
CLERK_SECRET_KEY=sk_test_xxxx
